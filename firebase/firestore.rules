rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /restaurants/{restaurantId} {
      match /menus/{menuId} {
        allow read: if true;
        allow create, update, delete: if true; // Temporairement ouvert pour d√©veloppement
        // En production, utiliser: allow write: if request.auth != null && request.auth.token.role == 'cashier';
      }
      match /orders/{orderId} {
        allow read: if true;
        allow create: if true;
        allow update, delete: if request.auth != null;
      }
      match /tables/{tableId} {
        allow read, write: if request.auth != null;
      }
    }
  }
}
